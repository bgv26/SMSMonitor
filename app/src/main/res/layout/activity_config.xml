<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RadioGroup
            android:id="@+id/rgCardSystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:orientation="horizontal">
        <RadioButton
                android:id="@+id/rbVisa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/radio_visa"
                android:button="@android:color/transparent"
                android:checked="true"/>
        <RadioButton
                android:id="@+id/rbMasterCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/radio_mastercard"
                android:button="@android:color/transparent"/>
        <RadioButton
                android:id="@+id/rbMaestro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/radio_maestro"
                android:button="@android:color/transparent"/>
    </RadioGroup>

    <EditText
            android:id="@+id/etCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="@string/config_widget_card_number_hint"
            android:inputType="number"/>

    <CheckBox
            android:id="@+id/chbCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/config_widget_card_type"/>


    <EditText
            android:id="@+id/etCreditSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="@string/config_widget_credit_limit_hint"
            android:inputType="number"
            android:visibility="gone"/>

    <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"/>

</LinearLayout>
